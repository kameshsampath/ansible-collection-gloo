{% set istio_version = item.0.key %}
{% set istio_revision = item.0.value.revision %}
{
    "apiVersion": "v1",
    "data": [[ istio_cm_data ]],
    "kind": "ConfigMap",
    "metadata": {
        "labels": {
            "istio.io/rev": "[[ istio_revision ]]"
        },
        "name": "istio-[[ istio_revision ]]",
        "namespace": "istio-gateways"
    }
}
